source 'https://rubygems.org'


## Gem packages which came by default.
gem 'rails', '4.2.6'			# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'sass-rails', '~> 5.0'		# Use SCSS for stylesheets
gem 'uglifier', '>= 1.3.0'		# Use Uglifier as compressor for JavaScript assets
gem 'coffee-rails', '~> 4.1.0'	# Use CoffeeScript for .coffee assets and views
gem 'jquery-rails'				# Use jquery as the JavaScript library
gem 'turbolinks'				# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'jbuilder', '~> 2.0'		# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'sdoc', '~> 0.4.0', group: :doc	# bundle exec rake doc:rails generates the API under doc/api.
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]	# Windows does not include zoneinfo files, so bundle the tzinfo-data gem


## Application-Specific Gem packages.
gem 'coffee-script-source', '1.8.0'		# Issue with coffeescript 1.9 on Windows.
gem 'devise'							# Added devise gem for authentication purposes.
gem 'bootstrap-sass'					# Added bootstrap gem for UI styling framework.
gem 'jquery-turbolinks'					# Solve issue with bootstrap drop down menu.
gem 'geokit-rails'						# For geolocational functionality purposes.
gem 'devise_zxcvbn'						# Enforce password strength.
gem 'carrierwave'						# For image uploading.
gem 'mini_magick'						# For image resizing.
gem 'acts-as-taggable-on'				# Adds tagging functionality.
gem 'will_paginate'						# Adds pagination.
gem 'rqrcode_png'  						# Adds QR code functionality.
gem 'rails_12factor', group: :production # For Heroku
gem 'pg'								# For PostGreSQL
gem 'figaro'							# For cloud image storage.
gem 'fog'								# Same as above.
gem 'omniauth-twitter'					# Omni-authentication with Devise(Facebook, Twitter)
gem 'omniauth-facebook'					# ^^^
gem "koala", "~> 2.2"					# Used for interfacing with users' Facebook wall.
gem "twitter"							# Self-explanatory.
gem 'bitly', '~> 0.9.0'					# Shorten URL for twitter.


## Gem packages for the development environment.
group :development do			
  gem 'web-console', '~> 2.0'	# Access an IRB console on exception pages or by using <%= console %> in views
end

group :development, :test do
  gem 'byebug'					# Call 'byebug' anywhere in the code to stop execution and get a debugger console
end

















